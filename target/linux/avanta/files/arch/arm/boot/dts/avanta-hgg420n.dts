/dts-v1/;

#include "avanta.dtsi"
#include "avanta-6560.dtsi"

/ {
	model = "HQW HGG420N";
	compatible = "hqw,hgg420n", "marvell,kirkwood-88f6282", "marvell,kirkwood";

	memory {
		device_type = "memory";
		reg = <0x00000000 0x8000000>;
	};

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	gpio_keys {
		compatible = "gpio-keys";

		button@4 {
			label = "wps";
			linux,code = <KEY_WPS_BUTTON>;
			gpios = <&gpio2 4 GPIO_ACTIVE_LOW>;
		};

		button@9 {
			label = "wireless";
			linux,code = <KEY_RFKILL>;
			gpios = <&gpio2 9 GPIO_ACTIVE_LOW>;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";

		green-ponnetwork {
			label = "hgg420n:red:ponnetwork";
			gpios = <&gpio1 10 GPIO_ACTIVE_LOW>;
		};

		green-ponport {
			label = "hgg420n:green:ponport";
			gpios = <&gpio1 12 GPIO_ACTIVE_LOW>;
		};

		green-voice1 {
			label = "hgg420n:green:voice1";
			gpios = <&gpio1 13 GPIO_ACTIVE_LOW>;
		};

		green-voice2 {
			label = "hgg420n:green:voice2";
			gpios = <&gpio1 14 GPIO_ACTIVE_LOW>;
		};

		green-network {
			label = "hgg420n:green:network";
			gpios = <&gpio1 15 GPIO_ACTIVE_LOW>;
		};

		green-usb {
			label = "hgg420n:green:usb";
			gpios = <&gpio1 25 GPIO_ACTIVE_LOW>;
		};

		green-power {
			label = "hgg420n:green:power";
			gpios = <&gpio1 26 GPIO_ACTIVE_HIGH>;
		};

		red-wps {
			label = "hgg420n:red:wps";
			gpios = <&gpio1 28 GPIO_ACTIVE_LOW>;
		};

		green-wps {
			label = "hgg420n:green:wps";
			gpios = <&gpio2 16 GPIO_ACTIVE_LOW>;
		};
	};
};

&nand {
	status = "okay";

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		partition@0 {
			label = "u-boot";
			reg = <0x0 0xc0000>;
			read-only;
		};

		partition@c0000 {
			label = "uboot_env";
			reg = <0xc0000 0x40000>;
		};

		partition@100000 {
			label = "kernel";
			reg = <0x100000 0x300000>;
		};

		partition@400000 {
			label = "ubi";
			reg = <0x400000 0x3c00000>;
		};
	};
};

&pciec {
	status = "okay";
};

&pcie0 {
	status = "okay";
};

&pcie1 {
	status = "okay";
};

&mdio {
	status = "okay";

	switch@8 {
		compatible = "marvell,mv88e6085";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <8>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				label = "internet";
			};

			port@1 {
				reg = <1>;
				label = "ethernet1";
			};

			port@2 {
				reg = <2>;
				label = "ethernet2";
			};

			port@3 {
				reg = <3>;
				label = "ethernet3";
			};

			port@4 {
				reg = <4>;
				phy-mode = "gmii";
				ethernet = <&eth0>;
				fixed-link {
					speed = <1000>;
					full-duplex;
				};
			};
		};
	};
};

&uart0 {
	status = "okay";
};

/* eth0 is connected to a Marvell 88F6560 internal switch, without a PHY. So set
 * fixed speed and duplex.
 */
&eth0 {
	status = "okay";
	phy-mode = "gmii";
	fixed-link {
		speed = <1000>;
		full-duplex;
	};
};

&eth1 {
	status = "disabled";
};

/* There is no battery on the board, so the RTC does not keep
 * time when there is no power, making it useless.
 */
&rtc {
	status = "disabled";
};
